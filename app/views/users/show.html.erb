<% provide(:title, @user.name) %>

<div class="container pt-4 content">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    User Information
                </div>
                <div class="card-body p-4 text-center">
                    <%= profile_image(@user, "medium") %>
                    <h5 class="card-title mt-3"><%= @user.name %></h5>
                    <p class="card-text"><%= @user.email %></p>
                    <div><%= render 'shared/stats' %></div>
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-header">
                    Activity Feed
                </div>
                <div class="card-body">
                    <div class="row p-3">
                    <%= render 'follow_form' if logged_in?%>
                        <h5></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
